<div class="full">
    <main class="main">
        <h1><%=@type.name%> games</h1>
        <% if !@type.games.empty? %>
        <%@type.games.each { |game|%>
            <div><a href="/games/<%=game.id%>"><%=game.name%></a> - <%=game.type.name%> - <%=game.short_description%></div>
        <%}%>
        <% else %>
            <div>No <%=@type.name%> games available</div>
        <% end %>
    </main>
</div>