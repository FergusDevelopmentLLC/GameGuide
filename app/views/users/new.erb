<main>
    <h1>Sign up</h1>
    <form method="post" action="/signup" class="form">
        <div>
            <label for="username">User name</label>
            <input type="text" name="user[username]" id="username" placeholder="User name" value="" />
        </div>
        <div>
            <label for="email">Email</label>
            <input type="text" name="user[email]" id="email" placeholder="Email" value="" />
        </div>
        <div>
            <label for="password">Password</label>
            <input type="password" name="user[password]" id="password" placeholder="Password" value="" />
        </div>
        <input type="submit" value="Sign up" />
    </form>
</main>