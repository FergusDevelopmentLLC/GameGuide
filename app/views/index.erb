<div class="home">
    <main class="main">
        <div class="latest-wrapper">
            <%if @latest_game.image%>
            <div class="latest-img">
                <img src="../../../uploads/<%=@latest_game.image%>"/>
            </div>
            <%end%>
            <div class="latest-description">
                <h3>Latest game update: <a href='/games/<%=@latest_game.id%>'><%=@latest_game.name%></a></h3>
                <h4><strong><%=@latest_game.short_description%></strong></h4>
                <p><%=@latest_game.description%></p>
                <ul>
                    <li>Type: <%=@latest_game.type.name%></li>
                    <%if !@latest_game.number_of_players.blank?%><li>Number of players: <%=@latest_game.number_of_players%></li><%end%>
                    <%if !@latest_game.play_length.blank?%><li>Play length: <%=@latest_game.play_length%></li><%end%>
                    <%if !@latest_game.tags.empty?%><li><li>Tags: <%=@latest_game.tag_links%></li><%end%>
                </ul>
            </div>
        </div>
        <div class="categories-wrapper">
            <h3>Game Types</h3>
            <div class="categories">
                <div class="category">
                    <a href='#'><img src="../../../images/monopoly.jpg"/></a>
                </div>
                <div class="category">
                    <img src="../../../images/monopoly.jpg"/>
                </div>
                <div class="category">
                    <img src="../../../images/monopoly.jpg"/>
                </div>
                <div class="category">
                    <img src="../../../images/monopoly.jpg"/>
                </div>
                <div class="category">
                    <img src="../../../images/monopoly.jpg"/>
                </div>
                <div class="category">
                    <img src="../../../images/monopoly.jpg"/>
                </div>
                <div class="category">
                    <img src="../../../images/monopoly.jpg"/>
                </div>
            </div>
        </div>
    </main>
    <aside class="right" <%=logged_in? ? "style='border-top: 1px solid lightgray'" : ""%>>
        <h3>Featured Games</h3>
       <% @featured.each { |featured| %>
            <div class="feature">
                <img src="../../../uploads/<%=featured.image%>"/>
                <div class="feature-desc">
                    <a href='/games/<%=featured.id%>'><%=featured.name%></a> - <%=featured.short_description%>
                </div>
            </div>
        <%}%>
    </aside>
</div>
